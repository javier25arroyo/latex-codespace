{
  "name": "LaTeX Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "James-Yu.latex-workshop"
      ],
      "settings": {
        "latex-workshop.latex.autoBuild.run": "onFileChange",
        "latex-workshop.latex.tools": [
          {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "%DOC%"
            ]
          },
          {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
              "%DOCFILE%"
            ]
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "pdflatex",
            "tools": [
              "pdflatex"
            ]
          },
          {
            "name": "pdflatex ➞ bibtex ➞ pdflatex × 2",
            "tools": [
              "pdflatex",
              "bibtex",
              "pdflatex",
              "pdflatex"
            ]
          }
        ],
        "latex-workshop.view.pdf.viewer": "tab"
      }
    }
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y texlive-latex-base texlive-latex-extra texlive-fonts-recommended texlive-fonts-extra texlive-lang-spanish latexmk"
}
